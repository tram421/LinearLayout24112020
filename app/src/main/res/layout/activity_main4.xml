<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<!--    Nhom 1: 1,3,4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f20"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#C1BD17"
            android:text="1"
            android:textColor="#000"
            android:textSize="50sp"
            android:gravity="center"/>
<!--        Nhom 3: 3,4-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#1900FF"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#BD320F"
                android:text="3"
                android:textColor="#000"
                android:textSize="50sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#BF5C43"
                android:text="4"
                android:textColor="#000"
                android:textSize="50sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>
<!--    Nhom 2: 2,5,6,7,8,9-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0099FF"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#f20"
            android:text="2"
            android:textSize="50sp"
            android:textColor="#000"
            android:gravity="center"/>
<!--        Nhom 4: 5,6    -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#00FFFF"
            android:layout_weight="5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#163C75"
                android:text="5"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#3B6EBA"
                android:text="6"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>
<!--        Nhom 5: 7,8,9-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#044C4C"
            android:layout_weight="3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#3BBA5B"
                android:text="7"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#673BBA"
                android:text="8"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#B23BBA"
                android:text="9"
                android:textSize="50sp"
                android:textColor="#000"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>